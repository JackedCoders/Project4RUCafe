<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RUCafe.CoffeeController">
   <children>
      <Label layoutX="220.0" layoutY="158.0" text="Order Coffee" underline="true">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <ImageView fitHeight="144.0" fitWidth="194.0" layoutX="195.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@CoffeePicMainMenu.jpg" />
         </image>
      </ImageView>
      <CheckBox fx:id="Cream" layoutX="206.0" layoutY="203.0" mnemonicParsing="false" onAction="#addToppingCream" text="Cream" />
      <CheckBox fx:id="Milk" layoutX="128.0" layoutY="203.0" mnemonicParsing="false" onAction="#addToppingMilk" text="Milk" />
      <CheckBox fx:id="WhippedCream" layoutX="205.0" layoutY="239.0" mnemonicParsing="false" onAction="#addToppingWhippedCream" text="Whipped Cream" />
      <CheckBox fx:id="Syrup" layoutX="128.0" layoutY="239.0" mnemonicParsing="false" onAction="#addToppingSyrup" text="Syrup" />
      <CheckBox fx:id="Caramel" layoutX="128.0" layoutY="278.0" mnemonicParsing="false" onAction="#addToppingCaramel" text="Caramel" />
      <Label layoutX="154.0" layoutY="318.0" text="Cost:" />
      <Button fx:id="addToOrder" layoutX="357.0" layoutY="316.0" mnemonicParsing="false" text="Add To Order" />
      <TextArea fx:id="textArea" layoutX="200.0" layoutY="310.0" prefHeight="36.0" prefWidth="121.0" />
      <MenuButton layoutX="315.0" layoutY="200.0" mnemonicParsing="false" text="Choose Coffee Size">
        <items>
          <MenuItem mnemonicParsing="false" text="Short" />
            <MenuItem mnemonicParsing="false" text="Venti" />
          <MenuItem mnemonicParsing="false" text="Tall" />
            <MenuItem mnemonicParsing="false" text="Grande" />
        </items>
      </MenuButton>
      <MenuButton layoutX="318.0" layoutY="236.0" mnemonicParsing="false" text="Choose Quantity">
        <items>
          <MenuItem mnemonicParsing="false" text="Action 1" />
          <MenuItem mnemonicParsing="false" text="Action 2" />
        </items>
      </MenuButton>
   </children>
</AnchorPane>
