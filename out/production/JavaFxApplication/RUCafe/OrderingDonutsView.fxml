      <Button fx:id="addTwoSelectedDonuts" layoutX="226.0" layoutY="232.0" mnemonicParsing="false" onAction="#addOTwoDonutToOrder" text="Add 2 of selected donuts" />
      <Button fx:id="addThreeSelectedDonuts" layoutX="226.0" layoutY="265.0" mnemonicParsing="false" onAction="#addOThreeDonutToOrder" text="Add 3 of selected donuts" />
   </children>
