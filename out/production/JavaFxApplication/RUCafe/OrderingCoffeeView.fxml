<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RUCafe.OrderingCoffeeController">
   <children>
      <Label layoutX="206.0" layoutY="164.0" text="Order Coffee" underline="true">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <ImageView fitHeight="144.0" fitWidth="194.0" layoutX="182.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@CoffeePicMainMenu.jpg" />
         </image>
      </ImageView>
      <CheckBox fx:id="Cream" layoutX="183.0" layoutY="227.0" mnemonicParsing="false" text="Cream" />
      <CheckBox fx:id="Milk" layoutX="105.0" layoutY="227.0" mnemonicParsing="false" onAction="#addToppingMilk" text="Milk" />
      <CheckBox fx:id="WhippedCream" layoutX="182.0" layoutY="263.0" mnemonicParsing="false" text="Whipped Cream" />
      <CheckBox fx:id="Syrup" layoutX="105.0" layoutY="263.0" mnemonicParsing="false" onAction="#addToppingSyrup" text="Syrup" />
      <CheckBox fx:id="Caramel" layoutX="105.0" layoutY="302.0" mnemonicParsing="false" text="Caramel" />
      <Label layoutX="124.0" layoutY="337.0" text="Cost:" />
      <Button fx:id="addToOrder" layoutX="327.0" layoutY="335.0" mnemonicParsing="false" text="Add To Order" />
      <TextArea fx:id="textArea" layoutX="170.0" layoutY="329.0" prefHeight="36.0" prefWidth="121.0" />
      <MenuButton layoutX="317.0" layoutY="223.0" mnemonicParsing="false" text="Size of the coffee">
        <items>
          <MenuItem mnemonicParsing="false" text="Action 1" />
          <MenuItem mnemonicParsing="false" text="Action 2" />
        </items>
      </MenuButton>
      <MenuButton layoutX="317.0" layoutY="259.0" mnemonicParsing="false" text="Choose quantity">
        <items>
          <MenuItem mnemonicParsing="false" text="Action 1" />
          <MenuItem mnemonicParsing="false" text="Action 2" />
        </items>
      </MenuButton>
   </children>
</AnchorPane>
